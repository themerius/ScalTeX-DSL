grammar de.htwg.scaltex.dsl.ScalTeX with org.eclipse.xtext.common.Terminals

generate scalTeX "http://www.htwg.de/scaltex/dsl/ScalTeX"

Scaltex:
	entities += Entity*
;

Entity:
	entity = (Heading | UniversalEntities | ControlCommand)
;

Heading:
	'ยง' ('>' | '>>' | '>>>') content += STRING
;

UniversalEntities:
	'^' name = ID
		content += STRING
;

ControlCommand:
	'!!' name = ID
;

terminal MULTILINESTRING: 
  '"""' ( '\\'('b'|'t'|'n'|'f'|'r'|'u'|'"'|"'"|'\\') | !('\\'|'"""') )* '"""' ;